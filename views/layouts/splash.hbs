<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

<!-- Standard Meta Tags -->

{{#if cron}}
	{{> splash/cron-meta-tags }}
{{else}}
	<meta name="description" content="Cronster: The ultimate app for tracking time to and from your most anticipated events.">
	<meta name="keywords" content="Cronster, countdown app, event tracker, time tracking, countdowns, count-ups, event countdown, life events, anniversary tracker">
	<meta name="author" content="Cronster">

	<!-- Open Graph Meta Tags for Facebook & LinkedIn -->
	<meta property="og:type" content="website">
	<meta property="og:title" content="Cronster - Track Your Events">
	<meta property="og:description" content="Join Cronster to create and share countdowns and count-ups for your most awaited events.">
	<meta property="og:image" content="https://www.cronster.app/assets/images/module-7.jpg">
	<meta property="og:url" content="https://www.cronster.app">
	<meta property="og:site_name" content="Cronster">

	<!-- Twitter Meta Tags -->
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:title" content="Cronster - Track Your Events">
	<meta name="twitter:description" content="With Cronster, time tracking for events becomes an engaging experience. Countdown to the big day or count up from a memorable past event.">
	<meta name="twitter:image" content="https://www.cronster.app/assets/images/module-7.jpg">
	<meta name="twitter:site" content="@CronsterApp">
	<meta name="twitter:creator" content="@CronsterApp">
{{/if}}
	
	<title id="title">{{ title }} | Cronster</title>
	
	<!-- Favicons -->
	<link rel="icon" href="/assets/images/favicon.ico?v=2">
	
	<!-- Fonts -->
	<link href='https://fonts.googleapis.com/css?family=Raleway:400,300,700' rel='stylesheet' type='text/css'>
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	
	<!-- Bootstrap core CSS -->
	<link href="/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
	
	<!-- Icon Fonts -->
	<link href="/assets/css/font-awesome.min.css" rel="stylesheet">
	<link href="/assets/css/eleganticons.css" rel="stylesheet">
	
	<!-- Plugins -->
	<link href="/assets/css/owl.carousel.css" rel="stylesheet">
	<link href="/assets/css/vertical.min.css" rel="stylesheet">
	<link href="/assets/css/animate.css" rel="stylesheet">
	
	<!-- Template core CSS -->
	<link href="/assets/css/template.css" rel="stylesheet">

</head>
<body>

	{{{ body }}}

	<!-- JAVASCRIPT FILES -->
	<script src="/assets/js/jquery-2.1.4.min.js"></script>
	<script src="/assets/bootstrap/js/bootstrap.min.js"></script>
	
	<script src="/assets/js/jquery.mb.YTPlayer.min.js"></script>
	<script src="/assets/js/jquery.backstretch.min.js"></script>
	
	<script src="/assets/js/owl.carousel.min.js"></script>
	<script src="/assets/js/jquery.fitvids.js"></script>
	
	<script src="/assets/js/wow.min.js"></script>
	
	<script src="/assets/js/typed.min.js"></script>
	<script src="/assets/js/jquery.countdown.min.js"></script>
	
	<script src="/assets/js/jqBootstrapValidation.js"></script>
	<script src="/assets/js/contact.js"></script>
	<script src="/assets/js/custom.js"></script>

  <!-- 100% privacy-first analytics -->
<script async defer src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
<noscript><img src="https://queue.simpleanalyticscdn.com/noscript.gif" alt="" referrerpolicy="no-referrer-when-downgrade" /></noscript>

</body>
</html>