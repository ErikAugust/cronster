<div class="tab-pane fade show active" id="profile-crons">
<!-- BEGIN #gallery -->
<div id="gallery" class="gallery">
  {{#each crons}}
  <!-- BEGIN image -->
  <div class="image gallery-group-1">
    <div class="image-inner">
      <a href="/@{{ ../username }}/{{ this.slug }}" data-lightbox="gallery-group-1">
        <div class="img" style="background-image: url({{ this.image }})"></div>
        <div class="countdown-timer image-overlay text-center count" data-datetime="{{ this.datetime }}">
          <p class="days"></p>
          <p class="hours"></p>
          <p class="minutes"></p>
          <p class="seconds"></p>
        </div>
      </a>
      <p class="image-caption">
        {{ this.date }}
      </p>
    </div>
    <div class="image-info">
      <h5 class="title">{{ this.title }}</h5>
      <div class="d-flex align-items-center mb-2">
      </div>
      <div class="desc">
        {{ this.description }}
      </div>
    </div>
  </div>
  <!-- END image -->
  {{/each }}	
</div>
<!-- END #gallery -->

</div>